<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ImageAnnotation.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageAnnotation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <ListView
            Name="projectView"
            IsItemClickEnabled="True"
            ItemClick="ProjectItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Project">
                    <controls:SettingsCard
                        Header="{x:Bind folder}"
                        Description="{x:Bind name}"
                        Margin="0,10,0,10">
                        <Button
                            Content="删除"
                            Click="RemoveProject"/>
                    </controls:SettingsCard>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
            Content="创建新项目"
            HorizontalAlignment="Center"
            Margin="0,50,0,0"
            Click="CreateNewProject"/>
        <ContentDialog
            Name="dialog"
            CloseButtonText="确定">
            <ContentDialog.Content>
                <StackPanel Spacing="10">
                    <TextBox Name="projectBox" Header="输入项目名称"/>
                    <controls:TokenizingTextBox
                        x:Name="tagTokenBox"
                        Header="输入标签，逗号分割"
                        HorizontalAlignment="Left"
                        TokenDelimiter=","/>
                </StackPanel>
            </ContentDialog.Content>
        </ContentDialog>
    </StackPanel>
</UserControl>
